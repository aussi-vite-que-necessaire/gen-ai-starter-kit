{
  "compilerOptions": {
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}